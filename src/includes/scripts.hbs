<script>
  // LOADING OF THE STORE
	window.addEventListener('load', (evt) => {
    
    let reqDig = document.getElementById('__REQUESTDIGEST') != null ? document.getElementById('__REQUESTDIGEST').value : '';    
    localStorage.setItem('reqDig', reqDig);

		let keys = Object.values( Store.getters.getKeys() )
		let nodes = document.querySelectorAll('span');
		nodes.forEach( (node) => {
      keys.forEach( (key) => {
        if(node.dataset[key] == ''){
          let content = localStorage.getItem(key) || '';
          node.textContent = content;
        }	
      })
    })
	})

  function setNextPage(page){
    console.log('setNextPage',page)
    Store.actions.setNextPage(page);
  }

  function enableButton(id){
    console.log('btn enabled', id)
    Store.actions.enableButton(id);
  }

  function disableButton(id){
    console.log('btn DISabled', id)
    Store.actions.disableButton(id);
  }
</script>