<!-- EDIT STORAGE MODAL -->

<div tabindex="0" id="modal__storage" class="fsa-modal fsa-modal--top" role="dialog" aria-hidden="true">
  <div class="fsa-modal__dialog">
    <div class="fsa-modal__content">
      <button class="fsa-modal__close" data-behavior="close-modal" aria-controls="modal__edit-storage">
        <img class="fsa-modal__close-icon" src="{{ "../../../" }}/img/close.svg" alt="close">
      </button>
      
      <h1 id="add-edit-modal" class="fsa-modal__title">Header</h1>
        
        <div class="fsa-m-t--s">

          {{> ../components/select/select-state SELECT_ID="UNIQUE-ID-select-state" HELP_ID="UNIQUE-ID-select-state-help" }}
          {{> ../components/select/select-county SELECT_ID="UNIQUE-ID-select-county" HELP_ID="UNIQUE-ID-select-county-help" STATE_CA=true }}

          <!--
          <div class="fsa-field">
            <label class="fsa-field__label" for="spinbox-example">LDP Rate <span class="fsa-field__label-desc">Required</span></label>
            <div class="fsa-field__item">
              <div class="fsa-spinbox">
                <div class="fsa-spinbox__number">
                  <input class="fsa-input fsa-spinbox__input" id="edit-storage-ldp-rate" aria-describedby="edit-storage-ldp-rate-help" name="edit-storage-ldp-rate" type="number" value="" step="0.01">
                </div>
                <div class="fsa-spinbox__actions" aria-hidden="true">
                  <button tabindex="-1" class="fsa-spinbox__btn fsa-spinbox__btn--increment" type="button" data-behavior="spinbox-spin" title="Increase"></button>
                  <button tabindex="-1" class="fsa-spinbox__btn fsa-spinbox__btn--decrement" type="button" data-behavior="spinbox-spin" title="Decrease"></button>
                </div>
              </div>
            </div>
            <span class="fsa-field__help" id="edit-storage-ldp-rate-help"></span>
          </div>
          -->

          <div class="fsa-m-t--s">
            <div class="fsa-field">
              <label class="fsa-field__label" for="UNIQUE-ID-Storage-location">Storage Location Details: </label>
              <input class="fsa-input fsa-field__item" id="UNIQUE-ID-Storage-location" aria-describedby="UNIQUE-ID-Storage-location-help" aria-required="true" name="UNIQUE-ID-Storage-location" type="text" value="">
            </div>
          </div>

          <div class="fsa-m-t--s">
            <div class="fsa-field">
              <label class="fsa-field__label" for="requested-quantity">Requested Quantity: <span class="fsa-field__label-desc">Required</span></label>
              <input id="requested-quantity" oninput="setQuantity(this.value); return false;" class="fsa-input fsa-field__item"
                aria-describedby="requested-quantity-help" aria-required="true" name="requested-quantity" type="text" value="">
            </div>
          </div>

          <div class="fsa-field">
            <label class="fsa-field__label" for="UNIQUE-ID-select-uom">Unit of Measure <span class="fsa-field__label-desc">Required</span></label>
            <select onchange="setUOM(this.value)" class="fsa-select fsa-field__item " id="UNIQUE-ID-select-uom"
              aria-describedby="UNIQUE-ID-select-uom-help" aria-required="true"
              name="UNIQUE-ID-select-uom">
              <option value="x">Select Unit</option>
              <option value="bu">BU</option>
              <option value="lbs">LBS</option>
            </select>
            <!--<span class="fsa-field__help" id="UNIQUE-ID-select-uom-help">Instructional message here</span>-->
          </div>

          <div class="fsa-field">
            <label class="fsa-field__label" for="UNIQUE-ID-select-source">Source of Quantity <span
                class="fsa-field__label-desc">Required</span></label>
            <select onchange="setSource(this.value)" class="fsa-select fsa-field__item " id="UNIQUE-ID-select-source"
              aria-describedby="UNIQUE-ID-select-source-help" aria-required="true"
              name="UNIQUE-ID-select-source">
              <option value="x">Select Source</option>
              <option value="source-certified">Certified</option>
              <option value="source-service">Measurement Service</option>
              <option value="source-evidence">Production Evidence</option>
            </select>
            <!--<span class="fsa-field__help" id="UNIQUE-ID-select-source-help">Instructional message here</span>-->
          </div>


          <!-- CERTIFIED -->
          <div id="source-certified">
            <span class="fsa-divider"></span>
            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3">Requested Quantity: <strong><span id="req-qnt-source-certified" class="fsa-text-allcaps"></span> BU</strong></p>
            </div>
            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3">Net Requested Quantity: <strong><span id="net-req-qnt-source-certified" class="fsa-text-allcaps"></span> BU</strong></p>
            </div>
          </div>
          <!-- /CERTIFIED -->


          <!-- SERVICE -->
          <div id="source-service">

            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3"><input onchange="toggleNetSource()" class="fsa-checkbox" id="lorem-9683783" type="checkbox" name="lorem-9683783" value="lorem-9683783">
                  <label for="lorem-9683783">Producer to set Specific Quantity</label>
                </span>
              </p>
            </div>
            
            <div id="net-requested-quantity" class="fsa-m-t--s">
              <div class="fsa-field">
                <label class="fsa-field__label" for="net-requested-quantity-service">Net Requested Quantity: <span class="fsa-field__label-desc">Required</span></label>
                <input oninput="setNetRequestedQuanity(this.value); return false;" class="fsa-input fsa-field__item" id="net-requested-quantity-service" aria-describedby="net-requested-quantity-service-help" aria-required="true" name="net-requested-quantity-service" type="text" value="">
                <span class="fsa-field__help" id="edit-storage-ldp-rate-help">This value is in BU</span>
              </div>
            </div>

            <span class="fsa-divider"></span>

            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3">Requested Quantity: <strong><span id="req-qnt-source-service" class="fsa-text-allcaps"></span> BU</strong></p>
            </div>

            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3">Net Requested Quantity: <strong><span id="net-req-qnt-source-service" class="fsa-text-allcaps"></span> BU</strong></p>
            </div>

          </div>
          <!-- /SERVICE -->


          <!-- EVIDENCE -->
          <div id="source-evidence">          

            <div class="fsa-m-t--s">
              <div class="fsa-level">
                <div>
                  <p class="fsa-text-size--3"><input onchange="toggleMoisture()" class="fsa-checkbox" id="moisture-toggle" type="checkbox" name="moisture-toggle" value="moisture-toggle">
                      <label for="moisture-toggle">Reduce for Moisture</label>
                  </p>
                </div>

                <div>
                  <div id="moisture-percentage" class="fsa-field">
                    <label class="fsa-field__label" for="moisture-perc">Moisture % <span class="fsa-field__label-desc">Required</span></label>
                    <div class="fsa-field__item">
                      <div class="fsa-spinbox">
                        <div class="fsa-spinbox__number">
                          <input class="fsa-input fsa-spinbox__input" id="moisture-perc" aria-describedby="moisture-perc-help" name="moisture-perc" type="number" value="" step="0.01">
                        </div>
                        <div class="fsa-spinbox__actions" aria-hidden="true">
                          <button tabindex="-1" class="fsa-spinbox__btn fsa-spinbox__btn--increment" type="button" data-behavior="spinbox-spin" title="Increase"></button>
                          <button tabindex="-1" class="fsa-spinbox__btn fsa-spinbox__btn--decrement" type="button" data-behavior="spinbox-spin" title="Decrease"></button>
                        </div>
                      </div>
                    </div>
                    <span class="fsa-field__help" id="edit-storage-ldp-rate-help">This value is a Percent</span>
                  </div>
                </div>
              </div>

            </div>
            
            <span class="fsa-divider fsa-m-t--s"></span>

            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3">Requested Quantity: <strong><span id="req-qnt-source-evidence" class="fsa-text-allcaps"></span> BU</strong></p>
            </div>

            <div class="fsa-m-t--s">
              <p class="fsa-text-size--3">Net Requested Quantity: <strong><span id="net-req-qnt-source-evidence" class="fsa-text-allcaps"></span> BU</strong></p>
            </div>

          </div>
          <!-- /EVIDENCE -->


          <div class="fsa-m-t--l">
            <button id="modal-add-update" role="button" data-behavior="close-modal" type="button" class="fsa-btn fsa-btn--primary">Update</button>   
            <button role="button" data-behavior="close-modal" type="button" class="fsa-btn fsa-btn--secondary">Cancel</button>
            <button id="modal-delete" role="button" data-behavior="close-modal" type="button" class="fsa-btn fsa-btn--tertiary">Delete Storage</button>
          </div>


        </div>
    </div>
  </div>
</div>

