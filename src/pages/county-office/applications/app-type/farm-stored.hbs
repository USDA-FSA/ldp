    <div class="fsa-m-t--m">

      <div class="fsa-grid">
        <div class="fsa-grid__1/1 fsa-grid__1/3@m">
          <div class="fsa-m-t--s">
            <div class="ldp-data-box">
              <div class="ldp-data-box__title">Available Quantity</div>
              <div class="ldp-data-box__bd ldp-data-box__bd--md">45,252.72 BU</div>
            </div>
          </div>
        </div>

        <div class="fsa-grid__1/1 fsa-grid__1/3@m">
          <div class="fsa-m-t--s">
            <div class="ldp-data-box">
              <div class="ldp-data-box__title">Total Requested Quantity</div>
              <div class="ldp-data-box__bd ldp-data-box__bd--md">7,611.44 BU</div>
            </div>
          </div>
        </div>

        <div class="fsa-grid__1/1 fsa-grid__1/3@m">
          <div class="fsa-m-t--s">
            <div class="ldp-data-box">
              <div class="ldp-data-box__title">Total Payment</div>
              <div class="ldp-data-box__bd ldp-data-box__bd--md">$7,505.93</div>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>


<div class="fsa-section">
  <div class="fsa-section__bd">

    {{> ../components/stepped-control/stepped-control-application-cou
